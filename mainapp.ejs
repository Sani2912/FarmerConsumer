           <script>
             $(document).ready(function(){
               $("#ah1").hide();
               $("#ap").hide();
               $("#ah2").hide();
               $("#ap1").hide();
               $("#a").mouseover(function(){
                $("#ah1").slideDown();
                $("#ap").fadeIn();
               });
               $("#a").mouseout(function(){
                 $("#ah1").slideUp();
                 $("#ap").fadeOut();
               });
               $("#a").click(function(){
                hidesub();
               });
               $("#b").mouseover(function(){
                $("#ah2").slideDown();
                $("#ap1").fadeIn();
               });
               $("#b").mouseout(function(){
                 $("#ah2").slideUp();
                 $("#ap1").fadeOut();
               });
               $("#b").click(function(){
                hidesub1();
                $("#form").submit();
               });
               $("#view").click(function(){
                 showprod();
               });
               $("#del").click(function(){
                 showdel();
               });
               $("#add").click(function(){
                 showadd();
               });
             });
           </script>
           <script type="text/javascript">
             function hidesub(){
               document.getElementById("first").style.display="none";
               document.getElementById("farmer").style.display="block";
             }
             function hidesub1(){
              document.getElementById("first").style.display="none";
              document.getElementById("consumer").style.display="block";
             }
             function showdel(){
              document.getElementById("addc").style.display="none";
              document.getElementById("viewc").style.display="none";
              document.getElementById("welcome").style.display="none";
              document.getElementById("delc").style.display="block";
             }
             function showadd(){
              document.getElementById("viewc").style.display="none";
              document.getElementById("delc").style.display="none";
              document.getElementById("welcome").style.display="none";
              document.getElementById("addc").style.display="block";
             }
             function showprod(){
              document.getElementById("delc").style.display="none";
              document.getElementById("addc").style.display="none";
              document.getElementById("welcome").style.display="none";
              document.getElementById("viewc").style.display="block";
             }
           </script>
