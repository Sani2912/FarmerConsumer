        <body>
            <div class="se-pre-con"></div>
                <div id="first"> 
                        <h1 id="head">HELLO <%= name%>!</h1>
                        <h1 id="ah1">Farmer</h1>
                        <p id="ap">Login as Farmer,start selling and Earn in smart way!</p>
                        <h1 id="ah2">Customer</h1>
                        <p id="ap1">Login as Customer,start buying with great savings!</p>
                        <div id="a"></div>
                        <div id="b"></div>
                </div>
              <div id="farmer">
                    <div id="side">
                        <br/><br/>
                      <h1 align="center" id="view">My Products</h1><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                      <h1 align="center" id="add">Add Product</h1><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                      <h1 align="center" id="del">Remove Product</h1>
                    </div>
                    <div id="content">
                      <div id="viewc">
                        <div>
                          <% if(products.length > 0){ %>
                           <% products.forEach(function(products){ %>
                            <div id="product">
                              <h1><%= products.product %></h1>
                               Price per KG - <%= products.price %><br/> 
                               <form action="predict" method="POST">
                                  <input type="hidden" name="product" id="product" value=<%= products.product %> >
                                  <input type="hidden" name="farmer" id="farmer" value=<%= products.email %> >
                                  <input type="submit" value="Predict Sales" id="submit">
                               </form>
                            </div>
                            <% }) %>
                          <% }else{ %>
                            <p>No products added yet!</p>
                          <% } %>
                        </div>
                      </div>
                      <div id="addc">
                        <div id="forma">
                            <h1>Product Details</h1>
                        <form action="addp" method="POST">
                          NAME<br/><input type="text" name="productname" id="productname" required><br/><br/>
                          TOTAL QUANTITY<br/><input type="number" name="totalquantity" required><br/><br/>
                          MINIMUM QUANTITY PER CUSTOMER<br/><input type="number" name="maxquantity" required><br/><br/>
                          PRICE PER KG<br/><input type="number" name="price" required><br/><br/>
                          <input type="hidden" name="latitude" id="latitude" value=<%= latitude %>>
                          <input type="hidden" name="longitude" value=<%= longitude %>>
                          <input type="hidden" name="emailid"  value=<%= email %>><br/>
                          <input type='submit' value="Add product➜">
                        </form> 
                      </div>
                      </div>
                      <div id="delc">
                          <div id="formb">
                              <h1>Product Details</h1>
                        <form action="deletep" method="POST">
                            Enter name of product to be deleted<input type="text" name="product">
                            <input type="hidden" name="farmer" id="farmer" value=<%= email %>><br/><br/>
                            <input type='submit' value="Delete product➜">
                        </form>
                        </div>
                      </div>
                    <div id="welcome">
                      <img src="https://www.animatedimages.org/data/media/707/animated-welcome-image-0031.gif" border="0" alt="animated-welcome-image-0112" id="welcome"/>
                    </div>
                  </div>
              </div>
                <div id="consumer">
                   <form action="list" method="POST" id="form">
                      <input type="hidden" name="latitude" id="latitude" value=<%= latitude %>>
                      <input type="hidden" name="longitude" value=<%= longitude %>>
                   </form>
                </div>
